<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tb_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkblue"
    app:layout_scrollFlags="scroll|enterAlways|snap"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/title_goodies"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="0.50dp"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp"
            android:layout_weight="0.1" />
        <ImageView

            android:id="@+id/btn_header_left"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="-20dp"
            android:layout_weight="0.15"

            android:src="@drawable/isteerlogo"
            android:visibility="visible" />

        <TextView
            android:id="@+id/header_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.60"
            android:gravity="center"
            android:fontFamily="@font/raleway_bold"
            android:singleLine="true"
            android:text="Title"

            android:layout_marginLeft="25dp"
            android:textColor="@color/White"
            android:textSize="@dimen/text_size_xviii"
            android:autoSizeMaxTextSize="20dp"
android:autoSizeMinTextSize="@dimen/text_size_xviii"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btn_header_right"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="0.50dp"
            android:tint="@color/White"
            android:padding="3dp"
            android:layout_weight="0.15" />
        <ImageView
            android:id="@+id/img_home"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="0.50dp"
            app:srcCompat="@drawable/new_home"
            android:layout_weight="0.15" />
        
    </LinearLayout>

</android.support.v7.widget.Toolbar>