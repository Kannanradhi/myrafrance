<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/PopUpView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/darkblue">

        <TextView
            android:id="@+id/popup_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:singleLine="true"
            android:text="Order Detail"
            android:textColor="@color/White"


            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btn_close_popup"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="false"
            android:scaleType="fitXY"
            android:src="@drawable/icon_close" />

    </RelativeLayout>

    <View
        android:id="@+id/thinline"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/White" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="Part No "
            android:textColor="@color/darkblue"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_pop_part_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:fontFamily="@font/opensans_light"
            android:textColor="@color/veryDrakGray"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="Manufacturer "
            android:textColor="@color/darkblue"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_pop_manu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:fontFamily="@font/opensans_light"
            android:textColor="@color/veryDrakGray"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="Description "
            android:textColor="@color/darkblue"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_pop_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left|center_vertical"
            android:singleLine="false"
            android:maxLines="5"
            android:fontFamily="@font/opensans_light"
            android:textColor="@color/veryDrakGray"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="List Price "
            android:textColor="@color/darkblue"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_pop_lprice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:fontFamily="@font/opensans_light"
            android:textColor="@color/veryDrakGray"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="MRP "
            android:textColor="@color/darkblue"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_pop_mrp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:fontFamily="@font/opensans_light"
            android:textColor="@color/veryDrakGray"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.3"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="Ordered Qty "
            android:textColor="@color/darkblue"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/tv_pop_order_qty"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.3"
            android:background="@drawable/round_white_red"
            android:gravity="center"
            android:maxLength="6"
            android:fontFamily="@font/opensans_light"
            android:selectAllOnFocus="true"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/Black"
            android:textSize="15sp" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".15"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="Pending Qty "
            android:textColor="@color/darkblue"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_pop_pend_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:fontFamily="@font/opensans_light"
            android:textColor="@color/veryDrakGray"
            android:textSize="15sp" />
        <!-- <EditText
             android:id="@+id/tv_pop_pend_qty"
             android:layout_width="0dp"
             android:layout_height="20dp"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:layout_weight="0.5"
             android:background="@drawable/round_white_red"
                         android:maxLength="6"
             android:fontFamily="@font/opensans_light"
             android:gravity="center"
             android:enabled="false"
             android:editable="false"
             android:inputType="number"
             android:singleLine="true"
             android:textColor="@color/Black"
             android:textSize="15sp" />-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="Date Ordered "
            android:textColor="@color/darkblue"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_pop_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:fontFamily="@font/opensans_light"
            android:textColor="@color/veryDrakGray"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="Availability "
            android:textColor="@color/darkblue"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_pop_avail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:textColor="@color/veryDrakGray"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>
