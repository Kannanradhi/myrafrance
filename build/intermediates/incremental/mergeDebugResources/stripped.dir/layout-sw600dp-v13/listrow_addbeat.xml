<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        android:elevation="@dimen/cardview_elevation"
        android:layout_margin="@dimen/cardview_elevation"
        app:cardCornerRadius="@dimen/cardview_elevation"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/customer_entry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_gravity="center"
            android:layout_weight="8.0"
            android:background="@color/transparent_background"
            android:fontFamily="@font/opensans_light"
            android:gravity="left|center_vertical"
            android:textStyle="bold"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/DrakGray"
            android:textSize="@dimen/text_size_xiv" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.0">

            <ImageView
                android:id="@+id/btn_addtobeat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"

                android:drawableTint="@color/blue"
                android:gravity="center"
                android:textColor="@color/White"
                android:textSize="@dimen/text_size_xvi"
                app:srcCompat="@drawable/ic_add_circle_outline_black_24dp" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>