<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/maintbl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_gravity="center"
    android:background="@color/White"
    android:gravity="center" >
   
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="-4dp"
        android:gravity="center" >

        <LinearLayout
            android:id="@+id/bottombar_one"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:adjustViewBounds="false"
                android:scaleType="fitCenter"
                android:tint="@color/DrakGray"
                android:src="@drawable/men_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:text="Menu"
                android:textColor="@color/veryDrakGray"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottombar_two"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:adjustViewBounds="false"
                android:scaleType="fitCenter"
                android:tint="@color/DrakGray"
                android:src="@drawable/refresh_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:text="Sync"
                android:textColor="@color/veryDrakGray"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottombar_three"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:adjustViewBounds="false"
                android:scaleType="fitCenter"

                android:tint="@color/DrakGray"
                android:src="@drawable/search_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:text="Search"
                android:textColor="@color/veryDrakGray"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottombar_four"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:adjustViewBounds="false"
                android:scaleType="fitCenter"
                android:tint="@color/DrakGray"
                android:src="@drawable/icon_checkouts" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:text="Order"
                android:textColor="@color/veryDrakGray"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottombar_five"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:adjustViewBounds="false"
                android:scaleType="fitCenter"
                android:tint="@color/DrakGray"
                android:src="@drawable/icon_cart" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:text="Pending"
                android:textColor="@color/veryDrakGray"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>
    </TableRow>

</TableLayout>