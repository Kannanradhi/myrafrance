<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/SCREEN_HEADER"
            layout="@layout/titlebar" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="9.">

        <LinearLayout
            android:id="@+id/ll_wrapper"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnLogin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight=".4"
                    android:fontFamily="@font/raleway"
                    android:singleLine="true"
                    android:text="@string/customer_name"
                    android:textColor="@color/darkblue"
                    android:textSize="@dimen/text_size_xiv" />

                <LinearLayout
                    android:id="@+id/ll_cname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight=".6"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_customername"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_margin="0.5dp"
                        android:background="@drawable/rectangle_light_gray"
                        android:ems="10"
                        android:fontFamily="@font/raleway"

                        android:gravity="left|center_vertical"
                        android:hint="@string/customer_name"
                        android:maxLength="100"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/Black"
                        android:textColorHint="@color/light_gray"
                        android:textSize="@dimen/text_size_xiv" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnLogin1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight=".4"
                    android:fontFamily="@font/raleway"
                    android:singleLine="true"
                    android:text="@string/payment_mode"
                    android:textColor="@color/darkblue"
                    android:textSize="@dimen/text_size_xiv" />

                <LinearLayout
                    android:id="@+id/ll_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight=".6"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_paymentmode"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_margin="0.5dp"
                        android:background="@drawable/rectangle_light_gray"
                        android:ems="10"
                        android:fontFamily="@font/raleway"
                        android:gravity="left|center_vertical"
                        android:hint="@string/payment_mode"
                        android:maxLength="100"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text=""
                        android:textColor="@color/Black"
                        android:textColorHint="@color/light_gray"
                        android:textSize="@dimen/text_size_xiv" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnLogin2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight=".4"
                    android:fontFamily="@font/raleway"
                    android:singleLine="true"
                    android:text="@string/amount"
                    android:textColor="@color/darkblue"
                    android:textSize="@dimen/text_size_xiv" />

                <LinearLayout
                    android:id="@+id/ll23"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight=".6"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_amount"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_margin="0.5dp"
                        android:background="@drawable/rectangle_light_gray"
                        android:ems="10"
                        android:fontFamily="@font/opensans_light"
                        android:hint="@string/amount"
                        android:inputType="numberDecimal"
                        android:maxLength="9"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text=""

                        android:textColor="@color/Black"
                        android:textColorHint="@color/light_gray"
                        android:textSize="@dimen/text_size_xiv" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_receipt_no"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnLogin5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight=".4"
                    android:fontFamily="@font/raleway"
                    android:singleLine="true"
                    android:text="@string/receipt_no"
                    android:textColor="@color/darkblue"
                    android:textSize="@dimen/text_size_xiv" />

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight=".6"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_receiptno"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_margin="0.5dp"
                        android:background="@drawable/rectangle_light_gray"
                        android:ems="10"
                        android:fontFamily="@font/opensans_light"
                        android:hint="@string/receipt_no"
                        android:inputType="number"
                        android:maxLength="20"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text=""
                        android:textColor="@color/Black"
                        android:textColorHint="@color/light_gray"
                        android:textSize="@dimen/text_size_xiv" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tobehidden"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btnLogin7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight=".4"
                        android:fontFamily="@font/raleway"
                        android:singleLine="true"
                        android:text="@string/cheque_no"
                        android:textColor="@color/darkblue"
                        android:textSize="@dimen/text_size_xiv" />

                    <LinearLayout
                        android:id="@+id/ll_starttime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight=".6"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_chequeno"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_margin="0.5dp"
                            android:background="@drawable/rectangle_light_gray"
                            android:ems="10"
                            android:fontFamily="@font/opensans_light"
                            android:hint="@string/cheque_no"
                            android:inputType="number"
                            android:maxLength="6"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text=""
                            android:textColor="@color/Black"
                            android:textColorHint="@color/light_gray"
                            android:textSize="@dimen/text_size_xiv" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/btnLogin8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight=".4"
                        android:fontFamily="@font/raleway"
                        android:singleLine="true"
                        android:text="@string/cheque_date"
                        android:textColor="@color/darkblue"
                        android:textSize="@dimen/text_size_xiv" />

                    <LinearLayout
                        android:id="@+id/ll_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight=".6"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_chequedate"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_margin="0.5dp"
                            android:background="@drawable/rectangle_light_gray"
                            android:ems="10"
                            android:fontFamily="@font/opensans_light"
                            android:gravity="left|center_vertical"
                            android:hint="@string/cheque_date"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text=""
                            android:textColor="@color/Black"
                            android:textColorHint="@color/light_gray"
                            android:textSize="@dimen/text_size_xiv" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btnLogin9"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight=".4"
                        android:fontFamily="@font/raleway"
                        android:singleLine="true"
                        android:text="@string/bank"
                        android:textColor="@color/darkblue"
                        android:textSize="@dimen/text_size_xiv" />

                    <LinearLayout
                        android:id="@+id/ll_endtime1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight=".6"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_bankname"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_margin="0.5dp"
                            android:background="@drawable/rectangle_light_gray"
                            android:ems="10"
                            android:fontFamily="@font/raleway"
                            android:hint="@string/bank"
                            android:inputType="textCapWords"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text=""
                            android:textColor="@color/Black"
                            android:textColorHint="@color/light_gray"
                            android:textSize="@dimen/text_size_xiv" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txt_cheque_image"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight=".4"
                        android:fontFamily="@font/raleway"
                        android:singleLine="true"
                        android:text="@string/cheque_image"
                        android:textColor="@color/darkblue"
                        android:textSize="@dimen/text_size_xiv" />

                    <LinearLayout
                        android:id="@+id/lt_cheque_image"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight=".6"
                        android:background="@drawable/rectangle_light_gray"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_cheque_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="80dp"
                            android:padding="3dp"
                            app:srcCompat="@drawable/camera" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnLogin0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight=".4"
                    android:fontFamily="@font/raleway"
                    android:singleLine="true"
                    android:layout_gravity="center"
                    android:text="@string/remarks"
                    android:textColor="@color/darkblue"
                    android:textSize="@dimen/text_size_xiv" />

                <LinearLayout
                    android:id="@+id/ll_endtime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight=".6"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_remarks"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:layout_margin="0.5dp"
                        android:background="@drawable/rectangle_light_gray"
                        android:ems="10"
                        android:fontFamily="@font/raleway"
                        android:hint="Remarks (optional)"
                        android:inputType="textMultiLine|textCapSentences"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text=""
                        android:textColor="@color/Black"
                        android:textColorHint="@color/light_gray"
                        android:textSize="@dimen/text_size_xiv" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/btnAddCol"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/rectangle_darg_gray"
        android:gravity="center"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight=".4"
            android:background="@drawable/rectangle_light_gray"
            android:gravity="right">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:padding="5dp"

                app:srcCompat="@drawable/ic_sd_storage_black_24dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_AddCol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@drawable/rectangle_light_gray"
            android:fontFamily="@font/raleway"
            android:gravity="left"
            android:inputType="textCapWords"
            android:text="Save"

            android:textColor="@color/darkblue"
            android:textSize="@dimen/text_size_xx" />
    </LinearLayout>
</LinearLayout>