<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <TableLayout
            android:id="@+id/maintbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:shrinkColumns="1,3,5,7,9"
            android:stretchColumns="0,2,4,6,8" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:gravity="center" >
                
                <TextView
                    android:fontFamily="@font/raleway_bold"
                    android:id="@+id/tv_tabmenu1"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:background="@color/light_gray"
                    android:gravity="center"
                    android:hint="Bill No"
                    android:padding="1dp"
                    android:textColor="@color/Black"
                    android:textColorHint="@color/White"
                    android:textSize="15sp" />
                
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/very_light_gray" />
                
                <TextView
                    android:fontFamily="@font/raleway_bold"
                    android:id="@+id/tv_tabmenu2"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:background="@color/light_gray"
                    android:gravity="center"
                    android:hint="Date"
                    android:padding="1dp"
                    android:textColor="@color/Black"
                    android:textColorHint="@color/White"
                    android:textSize="15sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/very_light_gray" />

                <TextView
                    android:fontFamily="@font/raleway_bold"
                    android:id="@+id/tv_tabmenu3"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:background="@color/light_gray"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="Bill Amt"
                    android:textColor="@color/White"
                    android:textSize="15sp" />
                
                                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/very_light_gray" />

                <TextView
                    android:fontFamily="@font/raleway_bold"
                    android:id="@+id/tv_tabmenu4"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:background="@color/light_gray"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="Bal Amt"
                    android:textColor="@color/White"
                    android:textSize="15sp" />
                
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/very_light_gray" />
                
                <TextView
                    android:fontFamily="@font/raleway_bold"
                    android:id="@+id/tv_tabmenu5"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:background="@color/light_gray"
                    android:gravity="center"
                    android:hint="CUM Amt"
                    android:padding="1dp"
                    android:textColor="@color/Black"
                    android:textColorHint="@color/White"
                    android:textSize="15sp" />

                                <View
                                    android:visibility="gone"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/very_light_gray" />
                
                <TextView
                    android:fontFamily="@font/raleway_bold"
                    android:visibility="gone"
                    android:id="@+id/tv_tabmenu6"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:background="@color/iSteerGrey"
                    android:gravity="center"
                    android:hint="Action"
                    android:padding="1dp"
                    android:textColor="@color/Black"
                    android:textColorHint="@color/White"
                    android:textSize="15sp" />
                
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>