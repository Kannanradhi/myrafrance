<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_marginRight="20dp"
    android:background="@color/very_light_gray">
    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_margin="30dp"
        android:layout_height="wrap_content"
        android:background="@color/very_light_gray"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:gravity="right"
            android:layout_margin="0dp"
            android:layout_gravity="right"

            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/lt_pending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"

                android:orientation="vertical">


                <TextView
                    android:id="@+id/txt_pending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:gravity="left"
                    android:layout_gravity="center"
                    android:paddingBottom="3dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:text="@string/pending"
                    android:textColor="@color/DrakGray"
                    android:textSize="15dp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/lt_visited"
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txt_visited"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"


                    android:gravity="left"
                    android:layout_gravity="center"
                    android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="3dp"
                    android:text="@string/visited"
                    android:textColor="@color/DrakGray"
                    android:textSize="15dp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/lt_cancelled"
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">



            <TextView
                android:id="@+id/txt_cancelled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".2"


                android:gravity="left"
                android:layout_gravity="center"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:text="@string/cancelled"
                android:textColor="@color/DrakGray"
                android:textSize="15dp" />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/lt_removed"
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">



            <TextView
                android:id="@+id/txt_removed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".2"


                android:gravity="left"
                android:layout_gravity="center"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:text="@string/removed"
                android:textColor="@color/DrakGray"
                android:textSize="15dp" />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/lt_checkin"
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">



            <TextView
                android:id="@+id/txt_checkin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".2"


                android:gravity="left"
                android:layout_gravity="center"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:text="@string/checkin"
                android:textColor="@color/DrakGray"
                android:textSize="15dp" />

        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>