<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight=".1"
    app:cardCornerRadius="3dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:elevation="3dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent_background"
        android:gravity="center"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/maintbl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:shrinkColumns="1"
            android:stretchColumns="0,2,4">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@color/transparent_background"
                android:gravity="center">

                <TextView
                    android:id="@+id/et_tabmenu2"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:background="@drawable/round_isteer_color_half"
                    android:fontFamily="@font/raleway_bold"
                    android:gravity="center"
                    android:hint="Credit Limit"
                    android:padding="1dp"
                    android:textColor="@color/Black"
                    android:textColorHint="@color/White"
                    android:textSize="15sp" />

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/transparent_background" />


                <TextView
                    android:id="@+id/tv_tabmenu3"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:background="@drawable/round_isteer_color_half"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/raleway_bold"
                    android:gravity="center"
                    android:text="Available Credit"
                    android:textColor="@color/White"
                    android:textSize="15sp" />
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/transparent_background" />


                <TextView
                    android:id="@+id/tv_tabmenu4"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:background="@drawable/round_isteer_color_half"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/raleway_bold"
                    android:gravity="center"
                    android:text="Credit Days"
                    android:textColor="@color/White"
                    android:textSize="15sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@color/transparent_background"
                android:gravity="center">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:background="@drawable/round_isteer_white_half"
                    android:fontFamily="@font/opensans_light"
                    android:gravity="center"
                    android:hint="0"
                    android:padding="1dp"
                    android:textStyle="bold"
                    android:textColor="@color/DrakGray"
                    android:textSize="15sp" />

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/transparent_background" />


                <TextView
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:background="@drawable/round_isteer_white_half"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/opensans_light"
                    android:gravity="center"
                    android:hint="0"
                    android:textColor="@color/DrakGray"
                    android:textStyle="bold"
                    android:textSize="15sp" />
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/transparent_background" />


                <TextView
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:background="@drawable/round_isteer_white_half"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/opensans_light"
                    android:gravity="center"
                    android:hint="0"
                    android:textColor="@color/DrakGray"
                    android:textStyle="bold"
                    android:textSize="15sp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent_background"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight=".05"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"

                        android:background="@color/light_gray"
                        android:fontFamily="@font/raleway_bold"
                        android:gravity="center"
                        android:text="Credit Limit"
                        android:padding="1dp"
                        android:textColor="@color/White"
                        android:textColorHint="@color/White"
                        android:textSize="@dimen/text_size_xiv" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/very_light_gray" />
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight=".045"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/light_gray"
                        android:fontFamily="@font/raleway_bold"
                        android:gravity="center"
                        android:text="Available Credit"
                        android:padding="1dp"
                        android:textColor="@color/White"
                        android:textColorHint="@color/White"
                        android:textSize="@dimen/text_size_xiv" />

                </LinearLayout>

                <View
                    android:visibility="gone"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/very_light_gray" />
                android:id="@+id/et_tabmenu2"
                <LinearLayout
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight=".045"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/light_gray"
                        android:fontFamily="@font/raleway_bold"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="Credit Days"
                        android:textColor="@color/White"
                        android:textColorHint="@color/White"
                        android:textSize="@dimen/text_size_xiv" />


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/very_light_gray" />
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight=".05"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/light_gray"
                        android:fontFamily="@font/raleway_bold"
                        android:gravity="center"
                        android:text="Overdue"
                        android:padding="1dp"
                        android:textColor="@color/White"
                        android:textColorHint="@color/White"
                        android:textSize="@dimen/text_size_xiv" />

                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent_background"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight=".05"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_total_credit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="35dp"
                        android:fontFamily="@font/opensans_light"
                        android:gravity="center"
                        android:background="@color/White"
                        android:text="0"
                        android:padding="1dp"
                        android:textColor="@color/veryDrakGray"
                        android:textColorHint="@color/White"
                        android:textSize="@dimen/text_size_xiv" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/very_light_gray" />
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight=".045"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_avail_credit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="35dp"
                        android:layout_weight=".1"
                        android:fontFamily="@font/opensans_light"
                        android:gravity="center"
                        android:text="0"
                        android:background="@color/White"
                        android:padding="1dp"
                        android:textColor="@color/veryDrakGray"
                        android:textColorHint="@color/White"
                        android:textSize="@dimen/text_size_xiv" />
                </LinearLayout>

                <View
                    android:visibility="gone"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/very_light_gray" />
                android:id="@+id/et_tabmenu2"
                <LinearLayout
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight=".045"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_credit_days"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="35dp"
                        android:layout_weight=".1"
                        android:fontFamily="@font/opensans_light"
                        android:gravity="center"
                        android:background="@color/White"
                        android:padding="1dp"
                        android:text="0"
                        android:textColor="@color/veryDrakGray"
                        android:textColorHint="@color/White"
                        android:textSize="@dimen/text_size_xiv" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/very_light_gray" />
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight=".05"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_over_due"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="35dp"
                        android:layout_weight=".1"
                        android:fontFamily="@font/opensans_light"
                        android:gravity="center"
                        android:text="0"
                        android:background="@color/White"
                        android:padding="1dp"
                        android:textColor="@color/veryDrakGray"
                        android:textColorHint="@color/White"
                        android:textSize="@dimen/text_size_xiv" />
                </LinearLayout>



            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
