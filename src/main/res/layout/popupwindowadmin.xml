<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    app:cardBackgroundColor="@color/very_white_gray"
    android:orientation="vertical"
    app:cardElevation="5dp">

    <LinearLayout

        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@color/very_white_gray"
        android:gravity="right"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_margin="5dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:id="@+id/lt_username"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".06"
                        android:gravity="left|center">

                        <ImageView
                            android:layout_width="30dp"

                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/round_darkblue"
                            android:padding="3dp"
                            android:tint="@color/White"
                            app:srcCompat="@drawable/ic_account_circle_black_24dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2"
                        android:gravity="left">

                        <TextView
                            android:id="@+id/txt_username"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:layout_marginRight="5dp"
                            android:autoSizeMaxTextSize="14dp"
                            android:autoSizeTextType="uniform"
                            android:gravity="left|center"

                            android:paddingBottom="3dp"
                            android:paddingLeft="2dp"
                            android:paddingTop="3dp"
                            android:text="username"
                            android:textColor="@color/DrakGray"
                            android:textSize="@dimen/text_size_xiv" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:id="@+id/lt_logout"

                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".07
"
                        android:gravity="right">

                        <ImageView
                            android:layout_width="30dp"

                            android:layout_height="30dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/round_darkblue"
                            android:padding="5dp"
                            android:tint="@color/White"
                            app:srcCompat="@drawable/logout" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_logout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_weight=".2"
                        android:gravity="left"
                        android:paddingBottom="3dp"
                        android:paddingLeft="2dp"
                        android:paddingTop="3dp"
                        android:text="Logout"
                        android:textColor="@color/DrakGray"
                        android:textSize="@dimen/text_size_xiv" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:id="@+id/lt_version"

                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".07
"
                        android:gravity="right">

                        <ImageView
                            android:layout_width="30dp"

                            android:layout_height="30dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/round_darkblue"
                            android:padding="5dp"
                            android:tint="@color/White"
                            app:srcCompat="@drawable/version" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_version"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_weight=".2"
                        android:gravity="left"
                        android:paddingBottom="3dp"
                        android:paddingLeft="2dp"
                        android:paddingTop="3dp"
                        android:text="Version"
                        android:fontFamily="@font/opensans_light"
                        android:textColor="@color/DrakGray"
                        android:textSize="@dimen/text_size_xiv" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.support.v7.widget.CardView>