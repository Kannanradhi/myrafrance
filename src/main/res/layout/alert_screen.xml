<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/darkblue"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/ic_signal_cellular_connected_no_internet_0_bar_black_24dp"/>
<TextView
    android:id="@+id/tv_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="No internet !"
    android:gravity="center"
    android:padding="5dp"
    android:textSize="@dimen/text_size_xx"
    android:textStyle="bold"
    android:textColor="@color/White" />
    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_message"
            android:text="No internet connections found. Check your connection or try again"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:paddingTop="5dp"
            android:textSize="@dimen/text_size_xviii"
            android:gravity="center"
            android:textColor="@color/darkblue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/lt_left_btn"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:background="@drawable/rectangle_darg_gray"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_left_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
android:textColor="@color/darkblue"
                android:textSize="@dimen/text_size_xviii"
                android:text="Cancel"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/lt_right_btn"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:background="@drawable/rectangle_darg_gray"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_right_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:textColor="@color/darkblue"
                android:textSize="@dimen/text_size_xviii"
                android:text="Retry"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>