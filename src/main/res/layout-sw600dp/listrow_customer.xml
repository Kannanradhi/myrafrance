<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="customer"
            type="com.isteer.b2c.model.OrderNewData"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardUseCompatPadding="true"
    android:elevation="@dimen/cardview_elevation"
    android:layout_margin="@dimen/cardview_elevation"
    app:cardCornerRadius="@dimen/cardview_elevation"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/customer_entry"
        android:layout_width="0dp"
        android:layout_weight=".1"
        android:minHeight="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:gravity="left|center_vertical"
        android:textStyle="bold"
        android:text='@{customer.company_name +"-"+customer.area_name}'
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/DrakGray"
        android:textSize="@dimen/text_size_xiv"/>
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"/>
</LinearLayout>

</android.support.v7.widget.CardView>
    </LinearLayout>
</layout>