<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lt_bill_map"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent_background"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView

            android:id="@+id/cs_tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:background="@color/transparent_background"
            android:fontFamily="@font/opensans_light"
            android:gravity="center"
            android:minHeight="60dp"
            android:padding="1dp"
            android:textColor="@color/DrakGray"
            android:textSize="@dimen/text_size_xii" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/very_light_gray" />

        <TextView

            android:id="@+id/cs_tv_customer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:background="@color/transparent_background"
            android:fontFamily="@font/raleway"
            android:gravity="center"
            android:padding="1dp"
            android:textColor="@color/DrakGray"
            android:textSize="@dimen/text_size_xii" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/very_light_gray" />

        <TextView

            android:id="@+id/cs_tv_paymode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".18"
            android:background="@color/transparent_background"
            android:fontFamily="@font/raleway"
            android:gravity="center"
            android:padding="1dp"
            android:textColor="@color/DrakGray"
            android:textSize="@dimen/text_size_xii" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/very_light_gray" />

        <TextView

            android:id="@+id/cs_tv_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:background="@color/transparent_background"
            android:fontFamily="@font/opensans_light"
            android:gravity="right"
            android:paddingRight="5dp"
            android:textColor="@color/DrakGray"
            android:textSize="@dimen/text_size_xii"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/very_light_gray" />

        <TextView

            android:id="@+id/cs_tv_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".17"
            android:background="@color/transparent_background"
            android:fontFamily="@font/opensans_light"
            android:gravity="right"
            android:paddingRight="5dp"
            android:textColor="@color/DrakGray"
            android:textSize="@dimen/text_size_xii"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/very_light_gray" />
</LinearLayout>